{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "Node16",
    "target": "ES2020",
    "allowJs": false,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node16",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/main.ts"],
  "exclude": ["src/main.example.ts"]
}
